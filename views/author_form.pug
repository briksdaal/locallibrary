extends layout

block content
    h1 #{title}

    form(method='POST')
        div.form-group
            label(for='first_name' style='margin-top:20px;') First Name:
            input#first_name.form-control(type='text' placeholder='First name (Christian)' name='first_name' required value=(author ? author.first_name : ''))
            label(for='family_name' style='margin-top:20px;') Family Name:
            input#family_name.form-control(type='text' placeholder='Family name (Surname)' name='family_name' required value=(author ? author.family_name : ''))
            label(for='date_of_birth' style='margin-top:20px;') Date of birth:
            input#date_of_birth.form-control(type='date' name='date_of_birth' value=(author ? author.date_of_birth_yyyy_mm_dd : ''))
            label(for='date_of_death' style='margin-top:20px;') Date of death:
            input#date_of_death.form-control(type='date' name='date_of_death' value=(author ? author.date_of_death_yyyy_mm_dd : ''))
            button.btn.btn-primary(type='submit' style='margin-top:20px;') Submit

    if errors
        ul 
            for error in errors
                li!= error.msg 
    
